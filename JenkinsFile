pipeline {
    agent any
    stages {
        stage('Build Image') {
            steps {
                sh 'sudo docker build -t trainingaleks/python-flaskapp .'
            }
        }
        stage('Deploy container') {
            steps {
                sh 'sudo docker-compose down'
                sh 'sudo docker-compose rm'
                sh 'sudo docker-compose up -d'
            }
        }
    }
}
