pipeline {
    agent any
    stages {
        stage('Build Image') {
            steps {
                sh 'sudo docker build -t trainingaleks/python-flaskapp .'
            }
        }
        stage('Deploy container') {
            steps {
                sh 'sudo docker run -d -p 5000:5000 --name flaskapp trainingaleks/python-flaskapp'
            }
        }
    }
}
